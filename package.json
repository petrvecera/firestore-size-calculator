{
  "private": true,
  "name": "firestore-size-calculator",
  "version": "0.0.1",
  "license": "MIT",
  "homepage": "https://firestore-size-calculator.pages.dev/",
  "scripts": {
    "build": "preact build",
    "serve": "sirv build --port 8080 --cors --single",
    "dev": "preact watch",
    "lint": "eslint src",
    "fix:prettier": "prettier --loglevel warn --write .",
    "test": "jest"
  },
  "eslintConfig": {
    "extends": "preact",
    "ignorePatterns": [
      "build/"
    ]
  },
  "dependencies": {
    "@codemirror/lang-javascript": "^6.1.2",
    "@uiw/react-codemirror": "^4.19.4",
    "bytes": "^3.1.2",
    "firestore-size": "^2.0.7",
    "preact": "^10.11.3",
    "preact-render-to-string": "^5.2.6",
    "preact-router": "^4.1.0"
  },
  "devDependencies": {
    "enzyme": "^3.11.0",
    "enzyme-adapter-preact-pure": "^4.0.1",
    "eslint": "^8.30.0",
    "eslint-config-preact": "^1.3.0",
    "jest": "^24.9.0",
    "jest-preset-preact": "^1.0.0",
    "preact-cli": "^3.4.2",
    "sirv-cli": "2.0.2",
    "prettier": "^2.8.1"
  },
  "jest": {
    "preset": "jest-preset-preact",
    "setupFiles": [
      "<rootDir>/tests/__mocks__/browserMocks.js",
      "<rootDir>/tests/__mocks__/setupTests.js"
    ]
  }
}
